
@{
    ViewBag.Title = "Merchant";
}

@model IEnumerable<CASecurity.API.Models.MerchantModel>



<script src="~/Scripts/Views/merchant.js?=1.0"></script>

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <h4>Merchants</h4>
            <button id="btnCreate" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Create</button><br />
            <table class="table table-responsive table-bordered table-striped">
                <thead>
                    <tr>
                        @*<th>#</th>*@
                        <th>Name</th>
                        <th>Code</th>
                        <th>Address </th>
                        <th>Bank</th>
                        <th>BRC</th>                        
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                    @item.Id
                             </td>*@
                            <td>

                                @item.Name

                            </td>
                            <td>
                                @item.Code
                            </td>
                            <td>
                                @item.Address

                            </td>
                            <td>
                                @item.Bank

                            </td>
                            <td>
                                @item.BRC

                            </td>
                            
                            <td>
                                @*<button class="btn btn-success">Modify</button>*@
                                <button class="btn btn-danger">Remove</button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Merchant</h4>
                </div>
                <div class="modal-body">
                    <form id="createForm" name="createForm" role="form" novalidate class="form-validation" action="~/Admin/Merchant" method="post">
                        <div class="form-group">
                            @Html.Hidden("MerchantId", "")
                            @Html.Hidden("RedirectTo", "Merchant")
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label for="Name"> Bank</label>
                                    @Html.DropDownList("BankId", new SelectList(ViewBag.Banks, "Value", "Text"),new {@class="dropdown"})
                                </div>
                            </div>
                            <div class="form-group">

                            </div>

                             <div class="form-group">
                                    <div class="col-lg-12">
                                        <label for="Name"> Name</label>
                                        <input type="text" class="form-control" name="Name" placeholder="merchant name" required maxlength="60">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label for="Code"> Code</label>
                                        <input type="text" class="form-control" name="Code" placeholder="merchant code" required maxlength="4" minlength="4">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label> Address</label>
                                        <input type="text" class="form-control" name="Address" placeholder="merchant address" required maxlength="60">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label> BRC</label>
                                        <input type="text" class="form-control" name="BRC" placeholder="brc" required maxlength="60">
                                    </div>
                                </div>


                            </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="btnSave" type="submit" class="btn  btn-success">Create</button>
                </div>
            </div>

        </div>
    </div>
</div>










